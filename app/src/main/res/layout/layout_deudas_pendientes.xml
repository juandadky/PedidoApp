<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_id_orden"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Serie: B00-100120972"
                android:textStyle="bold"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_fecha_emision"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="EmisiÃ³n: 19/02/2019"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_importe"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Importe: S/.204.50"
                android:textSize="17sp"
                android:layout_marginRight="4dp"
                android:textColor="@color/startColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_fecha_vence"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Vence: 14/05/2020"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_saldo_pagar"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Saldo: S/.40.65"
                android:textSize="18sp"
                android:textColor="@color/startColor"
                android:textStyle="bold"
                android:ellipsize="end"/>

            <Button
                android:id="@+id/btn_proceder_pago"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:text="Pagar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_ver_mas_background"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>