<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tipo_busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Búsqueda de Ventas por línea y sublínea"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:textSize="16sp"
            android:text="Categoría: "
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_fecha_inicio"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="#717171"
                android:textSize="16sp"
                android:text="Fecha Inicio: 02/08/2018"/>

            <TextView
                android:id="@+id/txt_fecha_final"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="#717171"
                android:textSize="16sp"
                android:text="Fecha Final: 02/04/2020"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_clientes_asignados"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="#717171"
                android:textSize="16sp"
                android:text="Clientes asignados: 546"/>

            <TextView
                android:id="@+id/txt_clientes_atendidos"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="#717171"
                android:textSize="16sp"
                android:text="Clientes atendidos: 0"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_ventas_contado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:textSize="18sp"
            android:text="Ventas totales al contado: S/.20000.00"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txt_ventas_credito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:textSize="18sp"
            android:text="Ventas totales al crédito  : S/.20000.00"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>