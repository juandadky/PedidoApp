<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txt_nombre_cliente"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Nombre: Juan Salazar"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/btn_editar_cliente"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_orange_24dp"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">

        <TextView
            android:id="@+id/txt_tipo_cliente"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn_ver_mas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/button_ver_mas_background"
            android:layout_margin="2dp"
            android:text="Ver mas"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/colorBlanco"/>

    </LinearLayout>



</LinearLayout>

</android.support.v7.widget.CardView>